$hover = orangered;
$_link = #aeb2b5;
$widthAside = 17%;

* {
    margin: 0px;
    padding: 0px;
    box-sizing: border-box;
}

html,
body {
    width: 100%;
    height: 100%;
}
body {
    background-color: #f1f5f8;

    & > .wrapper {
        margin-top: 54px;
        margin-bottom: 54px;
    }
}
a {
    color: #727874;
    transition: color .3s ease;
    &:hover {
        color: $hover;
    }
}



.wrapper {
    width: 80%;
    max-width: 93rem;
    margin: 0 auto;
    padding: 0 0px;
}

.flex {
    display: flex;
}
.flex-column {
    flex-direction: column;
}
.align-center {
    align-items: center;
}

.group {
    display: flex;
    flex-wrap: wrap;
    align-items: stretch;
}

.btn-reset {
  border: none;
  background-color: transparent;
}

.main {
    margin-top: 32px;
}

aside.aside {
    width: $widthAside;
}

.content {
    width: 'calc(100% - %s)' % $widthAside;
    text-align: center;
}

.widget {
    margin-bottom: 37px;
}
.widget-title {
    margin-bottom: 12px;
    font-size: 21px;
    color: #8a8d92;
}

.title {
    color: #616568;
}

.btn {
    padding: 10px;
    background-color: #ff765a;
    color: #fff;
    box-shadow: #00000029 2px 2px 2px;
    cursor: pointer;
    position: relative;
    white-space: nowrap;
    transition: box-shadow .3s ease;

    &:hover {
        box-shadow: #00000029 1px 1px 1px;
    }

    &:before {
        content: "";
        position: absolute;
        top: -8px;
        left: -7px;
        width: 20%;
        height: 100%;
        background-color: #000;
        z-index: -1;
    }
}


@import './require.styl';
_border(side){
    border-{side}: 5px solid transparent;
}

.card-posts {
    display: flex;
    width: 100%;
    height: 530px;
    margin-bottom: 27px;

    & > .max,
    & > .column {
        width: 50%
        height: 100%;
    }

    & > .max {
        height: 100%;
    }

    & > .left_column.max {
        _border('right');
    }
    & > .right_column.max {
        _border('left');
    }
    & > .column {
        & .card-post:nth-child(1){
            _border('bottom');
        }
    }
}

.card-post {
    width: 100%;
    height: 50%;
    position: relative;
    overflow: hidden;

    &:hover {

        & .card-post-img {
            filter: grayscale(0);
            transform: scale(1.11,1.17);
            transition-timing-function: ease-out;
            transition-duration: 550ms;
        }

        & .card-post-text {
            height: auto;
            bottom: 5%;
            padding-left: 27px;
            opacity: 1;
        }
    }

}

.card-post-link {
    display: block;
}
.card-post-link,
.card-post-img {
    width: 100%;
    height: 100%;
}

.card-post-img {
    transition: .5s linear;
    filter: grayscale(100%);
    object-fit: cover;
    object-position: center 20%;
}

.card-post-text {
    position: absolute;
    bottom: 0%;
    display: block;
    padding-left: 0px;
    padding-right: 27px;
    width: 100%;
    opacity: 0;
    transition: .3s ease;

    & > .title {
        color: #fff;
        font-size: 2rem;
    }

    & .date {
        color: #919191;
    }
}
$postHoverBodyHeight = 50px;

.post-hover {
    display: inline-block;
    min-width: 113px;
    max-width: 113px;
    width: 113px;
    height: 170px;
    margin-right: 19px;
    text-align: center;
    position: relative;
    transition: .3s ease;

    &:hover {
        height: 'calc(180px + %s)' % $postHoverBodyHeight;

        & .post-hover-link {
            height: 'calc(100% - %s)' % $postHoverBodyHeight;
        }
        & .post-hover-body {
            height: $postHoverBodyHeight;
            opacity: 1;
        }
    }

    &.hidden {
        min-width: 0px;
        max-width: 0px;
        width: 0px;
        overflow: hidden;
        opacity: 0;
        margin-right: 0px;
    }
}
.post-hover-link {
    display: block;
    text-decoration: none;
}
.post-hover-link,
.post-hover-img {
    width: 100%;
    height: 100%;
}
.post-hover-body {
    width: 100%;
    height: 0px;
    overflow: hidden;
    position: absolute;
    bottom: 0px;
    opacity: 0;
    transition: height .3s ease, opacity .3s ease;
    
    & .title {
        font-size: 12px;
    }
    & .star-rating {
        margin-bottom: 2px;
        & > .icon-star,
        & > .icon-star-stroke {
            width: 11px;
            height: 11px;
        }
    }
}
.carousel {
    display: flex;
    height: 245px;
    align-items: center;
    position: relative;
}

.carousel-description {
    max-width: 25%;
    padding-left: 23px;
    padding-right: 23px;
    height: 58%;

    & > .title {
        width: 100%;
        font-size: 24px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
}
.carousel-description-text {
    height: 34%;
    margin-top: 11px;
    margin-bottom: 18px;

    color: #aaa;
    font-size: 13px;
    overflow: hidden;
}
.carousel-body {
    display: flex;
    flex-basis: 100%;
    height: 100%;
    align-items: center;
    justify-content: left;
    white-space: nowrap;
    overflow: hidden;

    & .post-hover {
        // &:nth-child(1n+8) {
        //     display: none;
        // }
    }

}

.carousel-nav {
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    width: 100%;


    & li {
        display: inline-block;
        width: 11px;
        height: 11px;
        border-radius: 50%;
        background-color: #000;
        margin-right: 10px;

        &.active {
            background-color: #ff765a;
            box-shadow: #e36045 0 0 2px;
        }
    }
}

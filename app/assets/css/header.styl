$headerColorLink = $_link;

header.header {
    width: 100%;
    padding-top: 15px;
    padding-bottom: 15px;
    background-color: #fff;
    box-shadow: #e8e8e8 0 2px 2px;
}
.header-body {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 100%;

    & .left_column {
        flex-basis: 40%;
    }
    & .center_column {
        flex-basis: 20%;
        text-align: center;
    }

    & .right_column {
        flex-basis: 40%;
        text-align: right;
    }
}

.site-title {
    text-decoration: none;
    font-size: 17px;
    & > span:nth-child(1){
        color: #aaa;
    }
    & > span:nth-child(2){
        color: #000;
    }
}

.header-list {
    display: inline-block;
    padding-right: 5px;
    height: 21px;
    border-right: 1px double #e5e5e5;
    color: $_link;
    cursor: pointer;
    position: relative;
    transition: color .3s ease;
    &:nth-last-child(1) {
        border-right: none;
    }
    &:hover {
        color: $hover;

        & .sub-lists {
            height: auto;
            opacity: 1;
            padding: 9px 11px;
            transition: .3s ease;
            
        }
    }
}

.sub-lists {
    position: absolute;
    width: 100%;
    height: 0px;
    top: 100%;
    left: 10px;
    padding: 0px;
    border-radius: 3px;
    background-color: #fff;
    box-shadow: 0 2px 2px #aaaaaa40;
    z-index: 1;
    overflow: hidden;
    opacity: 0;
    transition: .0s ease;
}
.sub-list {
    list-style: none;
    & > a {
        text-decoration: none;
        display: block;
        padding-top: 9px;
        padding-bottom: 9px;
        transition: color .3s ease, padding-left .3s ease;
        &:hover {
            padding-left: 2px;
        }
    }
}

.header-form-search {
    & .btn-search {
        display: inline-block;
        padding: 3px;

        & .s-icon {
            width: 14px;
            height: 14px;
            fill: $_link;
            vertical-align: middle;
            cursor: pointer;
        }
    }
}
.header-input-search {
    border: none;
    display: inline-block;
    color: $_link;
}

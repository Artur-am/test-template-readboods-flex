.pagination {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 23px;
    margin-bottom: 12px;
}

.pagination-first,
.pagination-last,
.pagination-arrow,
.pagination-active {
  cursor: pointer;
}

.pagination-first,
.pagination-last {
  -webkit-border-radius: 50%;
          border-radius: 50%;
  color: #000;
  font-weight: 800;
  font-size: 14px;
  border: 1px solid #797f8b;
  padding: 6px;
  -webkit-transition: color 0.3s ease, border-color 0.3s ease;
  -o-transition: color 0.3s ease, border-color 0.3s ease;
  transition: color 0.3s ease, border-color 0.3s ease;
}
.pagination-first:hover,
.pagination-last:hover {
  color: #6d7c97;
  border-color: #3d4350;
}
.pagination-arrow {
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  padding-left: 21px;
  padding-right: 21px;
  -webkit-transition: color 0.3s ease;
  -o-transition: color 0.3s ease;
  transition: color 0.3s ease;
}
.pagination-arrow .pagination-circle {
  content: "";
  display: inline-block;
  width: 9px;
  height: 9px;
  background-color: #6d7c97;
  -webkit-border-radius: 50%;
          border-radius: 50%;
  margin-left: 7px;
  margin-right: 7px;
  -webkit-transition: background-color 0.3s ease;
  -o-transition: background-color 0.3s ease;
  transition: background-color 0.3s ease;
}
.pagination-arrow:hover {
  color: #6d7c97;
}
.pagination-arrow:hover .pagination-circle {
  background-color: #919bab;
}
.pagination-active {
  -webkit-border-radius: 50%;
          border-radius: 50%;
  background-color: #037af5;
  color: #fff;
  font-size: 21px;
  font-weight: 900;
  padding: 11px;
  -webkit-transition: color 0.3s ease;
  -o-transition: color 0.3s ease;
  transition: color 0.3s ease;
}
.pagination-active input {
  width: 26px;
  text-align: center;
  background-color: transparent;
  border: none;
  padding: 0px;
  display: block;
  color: #fff;
  font-size: 17px;
}
.pagination-active:hover {
  color: #c7d1ff;
}
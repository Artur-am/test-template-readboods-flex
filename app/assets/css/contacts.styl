.contact {
    position: relative;

    & > .form {
        width: 50%;
        height: 88%;
        max-height: 500px;
        min-height: 470px;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 999;
        & .form-grup {
            width: 80%;
        }
        & .left_column,
        & .right_column {
            height: 100%;
            padding-top: 50px;
        }
        & .left_column {
            flex-basis: 65%;
        }
        & .right_column {
            flex-basis: 35%;
            background-color: #3ac769;

            & .form-title {
                color: #e9ffff;
            }
        }
    }
}

.contact,
#map {
    width: 100%;
    height: 100%;
}

.contact-lists {
    text-align: left;
    padding-left: 17px;
    margin-top: 21px;
    & > li {
        padding-top: 11px;
        padding-bottom: 11px;
        list-style: none;

        &.social-items {
            justify-content: left;
            margin-top: 0px;
            margin-bottom: 0px;
            & svg {
                fill: #fff;
            }
        }

        & > svg {
            width: 11px;
            height: 11px;
            fill: #fff;
        }

        & .contact-list-title {
            font-size: 1.2em;
            color: #fff;
            text-shadow: #009093 0 0 1px;
        }
    }
}